<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.PlayerMapper">

    <!-- 插入玩家数据 -->
    <insert id="insertPlayer" parameterType="com.example.model.Player">
        INSERT INTO player (id, name, level) VALUES (#{id}, #{name}, #{level})
    </insert>

    <!-- 更新玩家数据 -->
    <update id="updatePlayer" parameterType="com.example.model.Player">
        UPDATE player SET name = #{name}, level = #{level} WHERE id = #{id}
    </update>

    <!-- 删除玩家数据 -->
    <delete id="deletePlayer" parameterType="java.util.UUID">
        DELETE FROM player WHERE id = #{id}
    </delete>

    <!-- 查询玩家数据 -->
    <select id="getPlayerById" parameterType="java.util.UUID" resultType="com.example.model.Player">
        SELECT id, name, level FROM player WHERE id = #{id}
    </select>

</mapper>
